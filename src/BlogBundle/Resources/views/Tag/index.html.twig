{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-6">
        <h2>Llistat Tags</h2>
        <hr/>
        <a href="{{path("blog_add_tag")}}" class="btn btn-success">Afegir tag</a>
        <hr/>
        {% for message in app.session.flashbag().get('status') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <table class="table table-bordered">
            <tr>
                <th>Nom</th>
                <th>Descripció</th>
                <th>Esborrar</th>
            </tr>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.name }}</td>
                    <td>{{ tag.description }}</td>
                    <td>
                        {% if tag.entryTag|length == 0 %}
                            <a href="{{path("blog_delete_tag", {"id":tag.id})}}" class="btn btn-danger" onclick="return confirm('are u sure?')">Esborrar</a>
                        {% else %} 
                           Tag en ús. No es pot esborrar
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="clearfix"></div>
{% endblock %}